<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.callRing.self.mapper.UserMapper" >
    <!--  开启二级缓存-->
    <cache eviction="LRU" type="com.callRing.redis.LoggingRedisCache"/>
    <select id="checkLogin" parameterType="com.callRing.self.po.User" resultType="com.callRing.self.po.User" useCache="true">
        SELECT * FROM `User`
        WHERE userName=#{userName}
        and userPassword=#{userPassword}
    </select>

    <insert id="registerUser" parameterType="com.callRing.self.po.User">
        insert into `User`
        (userName,
        userPassword)
        values(#{userName},
        #{userPassword})
    </insert>

    <select id="checkRegister" parameterType="com.callRing.self.po.User" resultType="com.callRing.self.po.User">
        SELECT userName,userPassword
        FROM `User`
        WHERE userName=#{userName}
    </select>

    <update id="updatePicPath" parameterType="com.callRing.self.po.User">
       update `user`
       set userHeadPortraitPath=#{userHeadPortraitPath}
       where userName=#{userName}
  </update>

    <select id="queryPicPath" parameterType="com.callRing.self.po.User" resultType="com.callRing.self.po.User" useCache="true">
        SELECT userHeadPortraitPath FROM `User`
        WHERE userName=#{userName}
    </select>

    <select id="queryUserInfo" parameterType="com.callRing.self.po.User" resultType="com.callRing.self.po.User" useCache="true">
      SELECT * FROM  `user` WHERE userName=#{userName}
    </select>

    <update id="updateUserInfo" parameterType="com.callRing.self.po.User">
      UPDATE `user` SET userIntroduce=#{userIntroduce} ,
      userHeadPortraitPath= #{userHeadPortraitPath}
      WHERE userName=#{userName}
    </update>

</mapper>